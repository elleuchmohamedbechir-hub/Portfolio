# ===========================================
# Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=jdbc:mysql://localhost:3306/portfolio_db
DATABASE_USERNAME=root
DATABASE_PASSWORD=your_database_password

# ===========================================
# JWT Configuration
# ===========================================
# Generate a secure random key (minimum 256 bits)
# You can use: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-256-bits

# ===========================================
# Mail Configuration
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
# For Gmail, use App Password (not your regular password)
# https://support.google.com/accounts/answer/185833
MAIL_PASSWORD=your-app-password

# ===========================================
# Application Configuration
# ===========================================
CONTACT_EMAIL=elleuchmohamedbechir@gmail.com

# ===========================================
# Server Configuration
# ===========================================
PORT=8080

# ===========================================
# Spring Profile
# ===========================================
# Options: dev, prod
SPRING_PROFILES_ACTIVE=dev

# ===========================================
# CORS Configuration (Optional)
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================================
# File Upload Configuration (Optional)
# ===========================================
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# ===========================================
# Production-specific (Optional)
# ===========================================
# SSL_ENABLED=true
# SSL_KEY_STORE=classpath:keystore.p12
# SSL_KEY_STORE_PASSWORD=your_keystore_password
# SSL_KEY_ALIAS=tomcat
